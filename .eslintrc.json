{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": "airbnb-base",
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "linebreak-style": "off",
        "no-plusplus": "off",
        "no-continue": "off",
        "consistent-return": "off",
        "import/no-extraneous-dependencies": "off",
        "no-await-in-loop": "off",
        "no-new": "off",
        "no-restricted-syntax": "off",
        "no-underscore-dangle": "off"
    }
}