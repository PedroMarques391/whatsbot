{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "@services/*": [
        "services/*"
      ],
      "@events/*": [
        "events/*"
      ],
      "@utils/*": [
        "utils/*"
      ]
    },
    "rootDir": "src",
    "outDir": "dist",
    "lib": [
      "ES2021"
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist",
  ]
}